<div class = 'content'>
    <h1 class= 'form-title'>Adding Food for {{market.name}}</h1>
<form method="POST" action="/markets/{{market._id}}/addFood/">
    <div class="input-field">
        <label>Food Name:</label>
        <input type="text" name="name" size="50" placeholder="Apple">
    </div>
    <div class="input-field">
        <label>Price:</label>
        <input type="text" name="price" size="50" placeholder="9.99">
    </div>
    <div class="input-field">
        <label>Weight in Pounds:</label>
        <input type="text" name="weight" size="50" placeholder="5.5">
    </div>
    <div class="input-field">
        <label>Organic?</label>
        <input type="checkbox" name="organic">
    </div>
    <button type="submit">Add Food</button>
</form>
</div>